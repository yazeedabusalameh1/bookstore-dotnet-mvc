@model IEnumerable<ProjectForTraining.Models.Book>



@{
    ViewData["Title"] = "Books Catalog";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-journal-text"></i> Books Catalog
                </h1>
                <p class="lead mb-4">Browse and manage your bookstore collection. Add, edit, and organize books easily.</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-book-half" style="font-size: 6rem; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Header actions -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="h4 text-muted">
                <i class="bi bi-list-ul"></i> Books List
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Add New Book
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th class="px-4 py-3"><i class="bi bi-hash"></i> ID</th>
                                <th class="px-4 py-3"><i class="bi bi-type"></i> Title</th>
                                <th class="px-4 py-3"><i class="bi bi-card-text"></i> Description</th>
                                <th class="px-4 py-3"><i class="bi bi-card-text"></i> Author Name </th>
                                <th class="px-4 py-3 text-center"><i class="bi bi-gear"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <span class="badge bg-secondary fs-6">@item.Id</span>
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-journal-text text-primary me-3" style="font-size: 1.5rem;"></i>
                                            <div>
                                                <h6 class="mb-0 fw-semibold">@item.Title</h6>
                                                <small class="text-muted">Book</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 text-truncate" style="max-width: 420px;" title="@item.Description">
                                        @item.Description
                                    </td>
                                    <td class="px-4 py-3 text-truncate" style="max-width: 420px;" title="@(item.Author?.FullName ?? "Unknown")">
                                        @(item.Author?.FullName ?? "Unknown")
                                    </td>
                                    <td class="px-4 py-3 text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Edit Book">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete Book">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-journal-x text-muted" style="font-size: 4rem;"></i>
                    <h4 class="text-muted mt-3">No Books Found</h4>
                    <p class="text-muted">Start by adding your first book to the system.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add First Book
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Stats -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-journals text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Total Books</h5>
                    <h2 class="text-primary">@(Model?.Count() ?? 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-people text-success" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Authors Linked</h5>
                    <h2 class="text-success">Coming Soon</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-graph-up text-warning" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Catalog Status</h5>
                    <h2 class="text-warning">Active</h2>
                </div>
            </div>
        </div>
    </div>
</div>
