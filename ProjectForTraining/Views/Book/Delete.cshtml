@model ProjectForTraining.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-exclamation-triangle text-danger"></i> Delete Book
                </h1>
                <p class="lead mb-4">Are you sure you want to delete this book? This action cannot be undone.</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-journal-x text-danger" style="font-size: 6rem; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> Book Information</h4>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>
                        <dt class="col-sm-3">Author</dt>
                        <dd class="col-sm-9">@(Model.Author?.FullName ?? "Unknown")</dd>
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="text-center">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-danger btn-lg me-2">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

