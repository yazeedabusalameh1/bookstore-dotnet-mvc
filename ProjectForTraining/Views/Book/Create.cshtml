@model ProjectForTraining.ViewModel.BookAuthorViewModel

@{
    ViewData["Title"] = "Create New Book";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-journal-plus"></i> Create New Book
                </h1>
                <p class="lead mb-4">Add a new book to your catalog. Fill in the details below.</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-bookmark-plus" style="font-size: 6rem; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> Book Information
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Message != null)
                    {
                        <h5 class="alert alert-danger">@ViewBag.Message</h5>
                    }
                    <form asp-controller="BookController1" asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-4">
                            @* <div class="col-md-6">
                                <label asp-for="BookId" class="form-label fw-bold">
                                    <i class="bi bi-hash text-primary"></i> Book ID
                                </label>
                                <input asp-for="BookId" class="form-control form-control-lg" placeholder="Enter unique book ID" />
                                <span asp-validation-for="BookId" class="text-danger"></span>
                            </div> *@
                            <div class="col-md-6">
                                <label asp-for="AuthorId" class="form-label fw-bold">
                                    <i class="bi bi-person text-primary"></i> Author
                                </label>
                                <select asp-for="AuthorId" class="form-select form-select-lg"
                                        asp-items="@(Model?.Authors != null ? new SelectList(Model.Authors, "Id", "FullName") : null)">
                                    <option value="0">-- Select Author --</option>
                                </select>
                                <span asp-validation-for="AuthorId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4">
                            <label asp-for="Title" class="form-label fw-bold">
                                <i class="bi bi-type text-primary"></i> Title
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter book title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-card-text text-primary"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter a brief description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-5">
                            <div class="btn-group" role="group">
                                <button type="submit" class="btn btn-success btn-lg me-2">
                                    <i class="bi bi-check-circle"></i> Create Book
                                </button>
                                <a asp-action="Index" class="btn btn-secondary btn-lg">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-0 bg-light mt-4">
                <div class="card-body">
                    <h6 class="card-title text-primary">
                        <i class="bi bi-lightbulb"></i> Tips
                    </h6>
                    <ul class="mb-0">
                        <li>Use a unique ID for each book.</li>
                        <li>Select the correct author, or add authors first if empty.</li>
                        <li>Provide a clear and concise description.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Custom client-side validation
        $(document).ready(function() {
            $('form').on('submit', function(e) {
                var isValid = true;
                
                // Check if author is selected
                var authorId = $('#AuthorId').val();
                if (authorId == '0') {
                    $('#AuthorId').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#AuthorId').removeClass('is-invalid');
                }
                
                // Check if title is filled
                var title = $('#Title').val().trim();
                if (title === '') {
                    $('#Title').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#Title').removeClass('is-invalid');
                }
                
                // Check if description is filled
                var description = $('#Description').val().trim();
                if (description === '') {
                    $('#Description').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#Description').removeClass('is-invalid');
                }
                
                if (!isValid) {
                    e.preventDefault();
                    // Show error message
                    if (!$('.alert-danger').length) {
                        $('<div class="alert alert-danger mt-3">Please fill in all required fields.</div>').insertAfter('.card-header');
                    }
                }
            });
            
            // Remove validation classes on input
            $('input, select, textarea').on('input change', function() {
                $(this).removeClass('is-invalid');
            });
        });
    </script>
}

