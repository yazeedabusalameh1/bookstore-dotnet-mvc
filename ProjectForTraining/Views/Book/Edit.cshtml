@model ProjectForTraining.ViewModel.BookAuthorViewModel

@{
    ViewData["Title"] = "Edit Book";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-pencil-square"></i> Edit Book
                </h1>
                <p class="lead mb-4">Update the book information. Book ID cannot be changed.</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-journal-text" style="font-size: 6rem; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> Book Information
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-route-id="@Model.BookId" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="BookId" />

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-hash text-primary"></i> Book ID
                                </label>
                                <input value="@Model.BookId" class="form-control form-control-lg" readonly style="background:#f8f9fa;cursor:not-allowed;" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AuthorId" class="form-label fw-bold">
                                    <i class="bi bi-person text-primary"></i> Author
                                </label>
                                <select asp-for="AuthorId" class="form-select form-select-lg"
                                        asp-items="@(Model?.Authors != null ? new SelectList(Model.Authors, "Id", "FullName") : null)">
                                    @if (Model?.Authors == null || !Model.Authors.Any())
                                    {
                                        <option value="">No authors available</option>
                                    }
                                    else
                                    {
                                        <option value="">-- Select Author --</option>
                                    }
                                </select>
                                <span asp-validation-for="AuthorId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4">
                            <label asp-for="Titel" class="form-label fw-bold">
                                <i class="bi bi-type text-primary"></i> Title
                            </label>
                            <input asp-for="Titel" class="form-control form-control-lg" />
                            <span asp-validation-for="Titel" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-card-text text-primary"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-5">
                            <div class="btn-group" role="group">
                                <button type="submit" class="btn btn-warning btn-lg me-2">
                                    <i class="bi bi-check-circle"></i> Save Changes
                                </button>
                                <a asp-action="Index" class="btn btn-secondary btn-lg">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
