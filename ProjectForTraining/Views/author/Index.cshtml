@model IEnumerable<ProjectForTraining.Models.Author>

@{
    ViewData["Title"] = "Authors Management";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-person-circle"></i> Authors Management
                </h1>
                <p class="lead mb-4">Manage your bookstore authors with ease. Add, edit, and organize author information efficiently.</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-people-fill" style="font-size: 6rem; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container">
    <!-- Action Buttons -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="h4 text-muted">
                <i class="bi bi-list-ul"></i> Authors List
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Add New Author
            </a>
        </div>
    </div>

    <!-- Authors Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col" class="px-4 py-3">
                                    <i class="bi bi-hash"></i> ID
                                </th>
                                <th scope="col" class="px-4 py-3">
                                    <i class="bi bi-person"></i> Author Name
                                </th>
                                <th scope="col" class="px-4 py-3 text-center">
                                    <i class="bi bi-gear"></i> Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <span class="badge bg-secondary fs-6">@item.Id</span>
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3">
                                                <i class="bi bi-person-circle text-primary" style="font-size: 2rem;"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-semibold">@item.FullName</h6>
                                                <small class="text-muted">Author</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-outline-info btn-sm" 
                                               title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-outline-warning btn-sm" 
                                               title="Edit Author">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-outline-danger btn-sm" 
                                               title="Delete Author">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <i class="bi bi-person-x text-muted" style="font-size: 4rem;"></i>
                    <h4 class="text-muted mt-3">No Authors Found</h4>
                    <p class="text-muted">Start by adding your first author to the system.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add First Author
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-people text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Total Authors</h5>
                    <h2 class="text-primary">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-journal-text text-success" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Books Available</h5>
                    <h2 class="text-success">Coming Soon</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-graph-up text-warning" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">System Status</h5>
                    <h2 class="text-warning">Active</h2>
                </div>
            </div>
        </div>
    </div>
</div>
