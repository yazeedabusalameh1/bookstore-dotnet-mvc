@model ProjectForTraining.Models.Author

@{
    ViewData["Title"] = "Author Details";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-person-circle"></i> Author Details
                </h1>
                <p class="lead mb-4">View detailed information about the selected author.</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-person-badge" style="font-size: 6rem; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Author Details Card -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> Author Information
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-3 text-center">
                            <div class="author-avatar mb-3">
                                <i class="bi bi-person-circle text-primary" style="font-size: 4rem;"></i>
                            </div>
                            <h5 class="text-muted">Author ID: @Model.Id</h5>
                        </div>
                        <div class="col-md-9">
                            <div class="author-details">
                                <h3 class="text-primary mb-3">@Model.FullName</h3>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-person"></i> Professional Author
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-calendar"></i> Member since 2024
                                </p>
                                <p class="text-muted">
                                    <i class="bi bi-book"></i> Books available: Coming Soon
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Detailed Information -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-list-ul"></i> Detailed Information
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td class="fw-bold text-muted" style="width: 150px;">
                                                <i class="bi bi-hash text-primary"></i> Author ID:
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary fs-6">@Model.Id</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">
                                                <i class="bi bi-person text-primary"></i> Full Name:
                                            </td>
                                            <td>
                                                <span class="fs-5 fw-semibold">@Model.FullName</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">
                                                <i class="bi bi-calendar3 text-primary"></i> Created:
                                            </td>
                                            <td>
                                                <span class="text-muted">January 2024</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">
                                                <i class="bi bi-geo-alt text-primary"></i> Location:
                                            </td>
                                            <td>
                                                <span class="text-muted">Not specified</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" 
                           class="btn btn-warning btn-lg me-2">
                            <i class="bi bi-pencil"></i> Edit Author
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg me-2">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" 
                           class="btn btn-danger btn-lg">
                            <i class="bi bi-trash"></i> Delete Author
                        </a>
                    </div>
                </div>
            </div>

            <!-- Additional Info Cards -->
            <div class="row mt-5">
                <div class="col-md-6">
                    <div class="card text-center h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <i class="bi bi-journal-text text-success mb-3" style="font-size: 2.5rem;"></i>
                            <h5 class="card-title">Books Written</h5>
                            <p class="card-text text-muted">Coming Soon</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card text-center h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <i class="bi bi-star text-warning mb-3" style="font-size: 2.5rem;"></i>
                            <h5 class="card-title">Author Rating</h5>
                            <p class="card-text text-muted">Not rated yet</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
