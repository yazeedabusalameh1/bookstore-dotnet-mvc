@model ProjectForTraining.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-exclamation-triangle text-danger"></i> Delete Author
                </h1>
                <p class="lead mb-4">Are you sure you want to delete this author? This action cannot be undone.</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-person-x text-danger" style="font-size: 6rem; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Warning Alert -->
            <div class="alert alert-danger border-0 shadow-sm" role="alert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
                    <div>
                        <h5 class="alert-heading mb-1">⚠️ Warning!</h5>
                        <p class="mb-0">This action will permanently remove the author from the system. Please review the information below before proceeding.</p>
                    </div>
                </div>
            </div>

            <!-- Author Information Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person"></i> Author to be Deleted
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <div class="author-avatar mb-3">
                                <i class="bi bi-person-circle text-danger" style="font-size: 4rem;"></i>
                            </div>
                            <h5 class="text-muted">Author ID: @Model.Id</h5>
                        </div>
                        <div class="col-md-9">
                            <div class="author-details">
                                <h3 class="text-danger mb-3">@Model.FullName</h3>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-calendar"></i> Member since 2024
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-book"></i> Books available: Coming Soon
                                </p>
                                <p class="text-muted">
                                    <i class="bi bi-clock"></i> Last updated: Just now
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Detailed Information -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-list-ul"></i> Author Details
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td class="fw-bold text-muted" style="width: 150px;">
                                                <i class="bi bi-hash text-danger"></i> Author ID:
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary fs-6">@Model.Id</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">
                                                <i class="bi bi-person text-danger"></i> Full Name:
                                            </td>
                                            <td>
                                                <span class="fs-5 fw-semibold">@Model.FullName</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">
                                                <i class="bi bi-calendar3 text-danger"></i> Created:
                                            </td>
                                            <td>
                                                <span class="text-muted">January 2024</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">
                                                <i class="bi bi-geo-alt text-danger"></i> Location:
                                            </td>
                                            <td>
                                                <span class="text-muted">Not specified</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Impact Analysis -->
            <div class="card border-0 bg-warning bg-opacity-10 mb-4">
                <div class="card-body">
                    <h6 class="card-title text-warning">
                        <i class="bi bi-exclamation-triangle"></i> Impact Analysis
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="bi bi-x-circle text-danger"></i> 
                                    Author profile will be permanently removed
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-x-circle text-danger"></i> 
                                    All associated data will be lost
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="bi bi-x-circle text-danger"></i> 
                                    Cannot be recovered or restored
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-x-circle text-danger"></i> 
                                    May affect book references
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Form -->
            <form asp-action="Delete" method="post" id="deleteForm">
                <input type="hidden" asp-for="Id" />
                
                <!-- Action Buttons -->
                <div class="row mt-5">
                    <div class="col-12 text-center">
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-danger btn-lg me-2" id="deleteBtn">
                                <i class="bi bi-trash"></i> Delete Author
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-2">
                                <i class="bi bi-arrow-left"></i> Cancel & Back to List
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg me-2">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                                <i class="bi bi-pencil"></i> Edit Instead
                            </a>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Alternative Actions -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <h6 class="card-title text-primary">
                                <i class="bi bi-lightbulb"></i> Consider Alternatives
                            </h6>
                            <p class="text-muted mb-3">Instead of deleting, you might want to:</p>
                            <div class="d-flex justify-content-center gap-3">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit Author
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-list"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sweet Alert CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section Scripts {
    <script>
        // Show warning on page load
        document.addEventListener('DOMContentLoaded', function() {
            Swal.fire({
                title: '⚠️ Delete Warning',
                text: 'You are about to delete an author. This action cannot be undone.',
                icon: 'warning',
                confirmButtonText: 'I Understand',
                confirmButtonColor: '#3085d6'
            });
        });

        // Handle form submission with Sweet Alert
        document.getElementById('deleteForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            Swal.fire({
                title: 'Are you sure?',
                text: `Do you really want to delete "${@Html.Raw(Json.Serialize(Model.FullName))}"?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading state
                    Swal.fire({
                        title: 'Deleting...',
                        text: 'Please wait while we remove the author.',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    // Submit the form after confirmation
                    setTimeout(() => {
                        document.getElementById('deleteForm').submit();
                    }, 1000);
                }
            });
        });

        // Prevent accidental navigation
        window.addEventListener('beforeunload', function(e) {
            e.preventDefault();
            e.returnValue = '';
        });
    </script>
}
